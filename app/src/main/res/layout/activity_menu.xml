<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_menu"
    tools:context=".MenuActivity">

    <Button
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBoard"
        android:background="@color/colorPrimaryDark"
        android:text="Board"
        android:textColor="#eeeeee"
        />

    <Button
        android:layout_below="@id/buttonBoard"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonTimetable"
        android:background="@color/colorPrimaryDark"
        android:text="Timetable"
        android:textColor="#eeeeee"
        />

    <Button
        android:layout_below="@id/buttonTimetable"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonConversation"
        android:background="@color/colorPrimaryDark"
        android:text="Conversation"
        android:textColor="#eeeeee"
        />

    <Button
        android:layout_below="@id/buttonConversation"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonChangePassword"
        android:background="@color/colorPrimaryDark"
        android:text="Change Password"
        android:textColor="#eeeeee"
        />

</RelativeLayout>