<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_change_password"
    tools:context=".ChangePassword">

    <TextView
        android:id="@+id/dashboard_welcome"
        android:layout_centerHorizontal="true"
        android:text="Welcome, user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:textColor="@color/colorPrimaryDark"
        />

    <EditText
        android:id="@+id/currentPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Current Password"
        android:inputType="textPassword"
        android:layout_marginTop="50dp"
        android:paddingBottom="15dp"
        android:textColorHint="#00000f"
        />

    <EditText
        android:id="@+id/newPassword"
        android:layout_below="@+id/currentPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New Password"
        android:inputType="textPassword"
        android:paddingBottom="15dp"
        android:textColorHint="#00000f"
        />

    <Button
        android:layout_below="@+id/newPassword"
        android:id="@+id/dashboard_btn_change_pass"
        android:layout_marginTop="16dp"
        android:text="Change Password"
        android:background="#263582"
        android:textColor="#eeeeee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>